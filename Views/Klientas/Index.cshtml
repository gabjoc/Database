@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.Klientas>

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Klientai"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

@* content itself *@
<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.PirkejasNr)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Vardas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Pavarde)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Saskaita)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Adresas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Telefonas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Epastas)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(model => item.PirkejasNr)
				</td>
				<td>
					@Html.DisplayFor(model => item.Vardas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Pavarde)
				</td>
				<td>
					@Html.DisplayFor(model => item.Saskaita)
				</td>
				<td>
					@Html.DisplayFor(model => item.Adresas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Telefonas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Epastas)
				</td>
				<td>
					<a href="@Url.Action("Edit", new { id = item.PirkejasNr })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
					<a href="@Url.Action("Delete", new { id = item.PirkejasNr })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>